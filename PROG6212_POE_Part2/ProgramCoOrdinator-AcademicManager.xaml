<Window x:Class="PROG6212_POE_Part2.ProgramCoOrdinator_AcademicManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG6212_POE_Part2"
        mc:Ignorable="d"
        Title="Sign In(Program Co-Ordinator/Academic Manager)" Height="300" Width="338">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" Margin="34,67,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="122,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <Label Content="Password" HorizontalAlignment="Left" Margin="34,0,0,0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="122,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>

        <Button x:Name="CreateAccount" Content="Create an Account" HorizontalAlignment="Left" Margin="64,201,0,0" VerticalAlignment="Top" Click="CreateAccount_Click" />
        <Button x:Name="SignIn" Content="Sign-In" HorizontalAlignment="Left" Margin="182,201,0,0" VerticalAlignment="Top" Click="SignIn_Click"/>

    </Grid>
</Window>
